                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SymbolIconXamlBox" Text="{Binding SymbolIconXaml, Mode=OneWay}" FontFamily="Consolas" Margin="-6,-5,0,0"
