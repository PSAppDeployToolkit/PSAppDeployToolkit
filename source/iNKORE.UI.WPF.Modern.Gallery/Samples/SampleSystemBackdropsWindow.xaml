<Window
    x:Class="iNKORE.UI.WPF.Modern.Gallery.Samples.SampleSystemBackdropsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
    xmlns:ikw="http://schemas.inkore.net/lib/ui/wpf"
    Title="SystemBackdrop sample window"
    ui:TitleBar.IsIconVisible="True"
    ui:WindowHelper.SystemBackdropType="Mica"
    ui:WindowHelper.UseAcrylicBackdrop="True"
    ui:WindowHelper.UseAeroBackdrop="True"
    ui:WindowHelper.UseModernWindowStyle="True">

  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <TextBlock
        x:Name="tbChangeStatus"
        Grid.Row="0"
        FontStyle="Italic"
        Margin="0,0,0,16"/>

    <ikw:SimpleStackPanel
        Grid.Row="1"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Spacing="20" >

      <ComboBox
          x:Name="cbBackdrop"
          HorizontalAlignment="Stretch"
          ui:ControlHelper.Header="Current backdrop"
          SelectionChanged="CbBackdrop_SelectionChanged" />

      <ComboBox
          x:Name="cbTheme"
          HorizontalAlignment="Stretch"
          ui:ControlHelper.Header="Window theme"
          SelectionChanged="CbTheme_SelectionChanged">
        <ComboBoxItem>Use system setting</ComboBoxItem>
        <ComboBoxItem>Light</ComboBoxItem>
        <ComboBoxItem>Dark</ComboBoxItem>
      </ComboBox>

    </ikw:SimpleStackPanel>
  </Grid>
</Window>
