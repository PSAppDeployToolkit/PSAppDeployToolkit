                            </DrawingGroup>
                        </DrawingImage.Drawing>
                    </DrawingImage>
                </ui:ImageIcon.Source>
            </ui:ImageIcon>
        </Grid>

        <!-- Title Bar -->
        <ui:TitleBar
            x:Name="TitleBar"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CloseWindowByDoubleClickOnIcon="False"
            CanMaximize="False"
            ShowMaximize="False"
            ShowClose="false"
            ShowMinimize="false" />

        <!-- Header Panel -->
        <StackPanel
            x:Name="HeaderPanel"
            Grid.Row="0"
            Grid.Column="1"
            Margin="24,20,32,20"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Width="Auto">
            <StackPanel
                x:Name="HeaderPanelNested"
                Orientation="Horizontal">
                <Image
                    x:Name="AppIconImage"
                    Width="64"
                    Height="64"
                    Margin="0,0,14,0"
                    Stretch="Uniform">
                    <Image.Source>
                        <BitmapImage UriSource="pack://application:,,,/PSADT.UserInterface;component/Resources/appIcon.png" />
                    </Image.Source>
                </Image>
                <StackPanel
                    x:Name="HeaderPanelNested2"
                    Orientation="Vertical">

                    <ui:TextBlock
                        x:Name="AppTitleTextBlock"
                        HorizontalAlignment="Stretch"
                        Margin="8,0,8,0"
                        TextAlignment="Left"
                        TextWrapping="WrapWithOverflow"
                        TextTrimming="CharacterEllipsis"
                        Text="Very Long Application Installation Name 1.0 EN"
                        MaxWidth="410"
                        FontTypography="Title"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <ui:TextBlock
                        x:Name="SubtitleTextBlock"
                        Margin="8,0,8,0"
                        HorizontalAlignment="Stretch"
                        FontTypography="Caption"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        MaxWidth="410"
                        TextTrimming="CharacterEllipsis"
                        Text="Super Long Company Name To Testing Wrapping - App Installation"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>


        <!-- Close Apps List Panel -->
        <StackPanel
            x:Name="CloseProcessesListPanel"
            Grid.Column="1"
            Grid.Row="1"
            Margin="24,0,24,0">

            <Border
                x:Name="SeparatorBorder"
                CornerRadius="4"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource SurfaceStrokeColorFlyoutBrush}"
                BorderThickness="1"
                SnapsToDevicePixels="True">

                <Grid x:Name="CloseAppsGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        x:Name="CloseAppMessageTextBlock"
                        Grid.Row="0"
                        Margin="16,16,16,16"
                        HorizontalAlignment="Stretch"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        Text="Please save your work before continuing. The following applications will be closed automatically."
                        FontTypography="BodyStrong"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                    <Separator
                        Grid.Row="1"
                        BorderBrush="{DynamicResource ControlStrokeColorOnAccentTertiaryBrush}" />

                    <ui:ListView
                        x:Name="AppsToCloseListView"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        ItemsSource="{Binding AppsToCloseCollection}"
                        BorderThickness="0"
                        ViewState="GridView"
                        Grid.Row="2"
                        MaxHeight="330"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        VerticalAlignment="Top"
                        Margin="8,0,8,0"
                        Padding="0,0,0,8"
                        VirtualizingStackPanel.IsVirtualizing="True"
                        VirtualizingStackPanel.VirtualizationMode="Recycling"
                        SelectionMode="Single">

                        <ui:ListView.View>
                            <ui:GridView AllowsColumnReorder="False">
                                <ui:GridView.ColumnHeaderContainerStyle>
                                    <Style>
                                        <Setter Property="UIElement.Visibility" Value="Collapsed" />
                                    </Style>
                                </ui:GridView.ColumnHeaderContainerStyle>
                                <ui:GridViewColumn Width="Auto">
                                    <ui:GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                Margin="8,4,8,4"
                                                Orientation="Horizontal">
                                                <Image
                                                    Width="32"
                                                    Height="32"
                                                    Source="{Binding Icon}" />
                                                <StackPanel
                                                    Orientation="Vertical"
                                                    Margin="24,0,24,0">
                                                    <ui:TextBlock
                                                        x:Name="ListViewTitle"
                                                        FontWeight="Bold"
                                                        TextWrapping="Wrap"
                                                        TextTrimming="CharacterEllipsis"
                                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                                        Text="{Binding ProcessDescription}" />
                                                    <ui:TextBlock
                                                        x:Name="ListViewSubTitle"
                                                        FontSize="12"
                                                        FontWeight="SemiBold"
                                                        HorizontalAlignment="Stretch"
                                                        TextAlignment="Left"
                                                        TextWrapping="Wrap"
                                                        TextTrimming="CharacterEllipsis"
                                                        Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                        Text="{Binding ProcessName}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ui:GridViewColumn.CellTemplate>
                                </ui:GridViewColumn>
                            </ui:GridView>
                        </ui:ListView.View>
                    </ui:ListView>
                </Grid>
            </Border>
        </StackPanel>

        <!-- Button Panel -->
        <StackPanel
            x:Name="ButtonPanel"
            Grid.Column="1"
            Grid.Row="2">
            <Grid
                x:Name="ActionButtons"
                Margin="24,20,24,20"
                VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ui:Button
                    x:Name="DeferButton"
                    Grid.Column="0"
                    Margin="0,0,4,0"
                    HorizontalAlignment="Stretch"
                    Appearance="Secondary"
                    Content="Defer (5 remain)"
                    Click="DeferButton_Click" />
                <ui:Button
                    x:Name="ContinueButton"
                    Grid.Column="1"
                    Margin="4,0,0,0"
                    HorizontalAlignment="Stretch"
                    Appearance="Primary"
                    Content="Close Apps &amp; Install"
                    Click="ContinueButton_Click" />
            </Grid>
        </StackPanel>
    </Grid>
</local:BaseDialog>
