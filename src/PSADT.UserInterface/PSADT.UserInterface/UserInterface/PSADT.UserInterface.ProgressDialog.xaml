                            </DrawingGroup>
                        </DrawingImage.Drawing>
                    </DrawingImage>
                </ui:ImageIcon.Source>
            </ui:ImageIcon>
        </Grid>

        <!-- Title Bar -->
        <ui:TitleBar
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            CloseWindowByDoubleClickOnIcon="False"
            CanMaximize="False"
            ShowMaximize="False"
            ShowClose="false"
            ShowMinimize="true" />

        <tray:NotifyIcon
            x:Name="NotifyIcon"
            FocusOnLeftClick="True"
            MenuOnRightClick="False"
            TooltipText="" />

        <!-- Header Panel -->
        <StackPanel
            x:Name="HeaderPanel"
            Grid.Row="0"
            Grid.Column="1"
            Margin="24,32,32,24"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Width="Auto">
            <StackPanel
                x:Name="HeaderPanelNested"
                Orientation="Horizontal">
                <Image
                    x:Name="AppIconImage"
                    Width="64"
                    Height="64"
                    Stretch="Uniform">
                    <Image.Source>
                        <BitmapImage UriSource="pack://application:,,,/PSADT.UserInterface;component/Resources/appIcon.png" />
                    </Image.Source>
                </Image>
                <StackPanel
                    x:Name="HeaderPanelNested2"
                    Orientation="Vertical">

                    <ui:TextBlock
                        x:Name="AppTitleTextBlock"
                        HorizontalAlignment="Stretch"
                        Margin="8,0,8,0"
                        TextAlignment="Left"
                        TextWrapping="WrapWithOverflow"
                        TextTrimming="CharacterEllipsis"
                        Text="Very Long Application Installation Name 1.0 EN"
                        MaxWidth="428"
                        FontTypography="Title"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                    <ui:TextBlock
                        x:Name="SubtitleTextBlock"
                        Margin="8,0,8,0"
                        HorizontalAlignment="Stretch"
                        FontTypography="Caption"
                        TextAlignment="Left"
                        TextWrapping="Wrap"
                        MaxWidth="462"
                        TextTrimming="CharacterEllipsis"
                        Text="Super Long Company Name To Testing Wrapping - App Installation"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </StackPanel>
        </StackPanel>


        <!-- Progress Panel -->
        <StackPanel
            x:Name="ProgressPanel"
            Grid.Column="1"
            Grid.Row="1"
            Margin="24,0,24,24">

            <Border
                x:Name="SeparatorBorder"
                CornerRadius="4"
                Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{DynamicResource SurfaceStrokeColorFlyoutBrush}"
                BorderThickness="1"
                SnapsToDevicePixels="True">

                <Grid x:Name="ProgressGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock
                        x:Name="ProgressMessageTextBlock"
                        Grid.Row="0"
                        Margin="16,16,16,16"
                        HorizontalAlignment="Stretch"
                        TextAlignment="Left"
                        Text="Installation In Progress. Please Wait ..."
                        TextWrapping="Wrap"
                        FontWeight="SemiBold"
                        FontTypography="Body"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

                    <Separator
                        Grid.Row="1"
                        BorderBrush="{DynamicResource ControlStrokeColorOnAccentTertiaryBrush}" />

                    <ui:TextBlock
                        x:Name="ProgressMessageDetailTextBlock"
                        Grid.Row="2"
                        Margin="16,16,16,16"
                        HorizontalAlignment="Stretch"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        TextTrimming="CharacterEllipsis"
                        TextAlignment="Left"
                        Text="Performing post-installation clean up operations ..."
                        TextWrapping="Wrap"
                        FontTypography="Body" />
                    <!-- Progress Bar -->
                    <Border
                        x:Name="BottomBar"
                        Background="{DynamicResource SmokeFillColorDefaultBrush}"
                        Height="8"
                        Margin="16,0,16,16"
                        Grid.Row="3">
                        <ProgressBar
                            x:Name="ProgressBar"
                            Foreground="{DynamicResource AccentTextFillColorTertiaryBrush}"
                            VerticalAlignment="Center"
                            MinHeight="9"
                            UseLayoutRounding="True"
                            IsIndeterminate="True" />
                    </Border>

                </Grid>
            </Border>
        </StackPanel>


    </Grid>
</local:BaseDialog>
