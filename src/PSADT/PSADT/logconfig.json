{
  "LogDirectory": "C:\\Logs\\Unified",
  "LogFileNamePrefix": "UnifiedApp_",
  "LogFileNameWithoutExtension": "UnifiedLogger",
  "LogFileNameSuffix": "_log",
  "LogFileExtension": "txt",
  "LogFileNameTimestampFormat": "yyyy-MM-dd-HH-mm-ss",
  "LogFormat": "Default",
  "MinimumLogLevel": "Information",
  "EnableAsyncLogging": true,
  "TextSeparator": " | ",
  "MaxQueueSize": 10000,
  "MaxRepeatedMessages": 1,
  "RetryAttempts": 10,
  "SleepIntervalInMilliseconds": 100,
  "CallerContextFormat": "Detailed",
  "StartManually": false,
  "StopLoggingTimeoutInSeconds": 30,
  "SubscribeToUnhandledException": true,
  "SubscribeToUnobservedTaskException": true,
  "SubscribeToOnProcessExitAndCallDispose": true,
  "MaxLogFileSizeInBytes": 10485760, // 10 MB
  "ErrorParserConfig": {
    // Add specific error parser configurations here
  }
}
