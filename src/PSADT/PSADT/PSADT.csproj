<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net472;net10.0-windows10.0.18362.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <RootNamespace>PSADT</RootNamespace>
    <AssemblyName>PSADT</AssemblyName>
    <Product>PSAppDeployToolkit Common Support Library</Product>
    <AssemblyTitle>PSAppDeployToolkit Common Support Library</AssemblyTitle>
    <AssemblyDescription>This assembly serves to provide common code and utilities to all areas of PSAppDeployToolkit.</AssemblyDescription>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>SYSLIB1045</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="PSADT.ClientServer.Client" />
    <InternalsVisibleTo Include="PSADT.ClientServer.Client.Launcher" />
    <InternalsVisibleTo Include="PSADT.ClientServer.Server" />
    <InternalsVisibleTo Include="PSADT.Tests" />
    <InternalsVisibleTo Include="PSADT.UserInterface" />
    <InternalsVisibleTo Include="PSAppDeployToolkit" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Text.Json" Version="10.0.2" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <PackageReference Include="System.IO.FileSystem.AccessControl" Version="5.0.0" />
    <Reference Include="System.DirectoryServices" />
    <Reference Include="System.ServiceProcess" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0-windows10.0.18362.0'">
    <PackageReference Include="System.DirectoryServices" Version="10.0.2" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="10.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\PSADT.LibraryInterfaces\PSADT.LibraryInterfaces.csproj" />
  </ItemGroup>
</Project>
