<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net472;net10.0-windows10.0.18362.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>PSADT.UserInterface</RootNamespace>
    <AssemblyName>PSADT.UserInterface</AssemblyName>
    <Product>PSAppDeployToolkit User Interface Library</Product>
    <AssemblyTitle>PSAppDeployToolkit User Interface Library</AssemblyTitle>
    <AssemblyDescription>This product provides user interface capabilities to PSAppDeployToolkit.</AssemblyDescription>
    <NoWarn>SYSLIB1045</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\lib\iNKORE.UI.WPF.Modern\source\iNKORE.UI.WPF.Modern.Controls\iNKORE.UI.WPF.Modern.Controls.csproj" />
    <ProjectReference Include="..\..\..\lib\iNKORE.UI.WPF.Modern\source\iNKORE.UI.WPF.Modern\iNKORE.UI.WPF.Modern.csproj" />
    <ProjectReference Include="..\PSADT\PSADT.csproj" />
    <ProjectReference Include="..\PSADT.ClientServer.Common\PSADT.ClientServer.Common.csproj" />
    <ProjectReference Include="..\PSAppDeployToolkit\PSAppDeployToolkit.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="PSADT.ClientServer.Client" />
    <InternalsVisibleTo Include="PSADT.ClientServer.Server" />
    <InternalsVisibleTo Include="PSADT.UserInterface.TestHarness" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Interfaces\Classic\ClassicBase.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Interfaces\Classic\ClassicDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Interfaces\Classic\CloseAppsDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Interfaces\Classic\CustomDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Interfaces\Classic\HelpConsole.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Interfaces\Classic\InputDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Interfaces\Classic\ProgressDialog.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Interfaces\Classic\RestartDialog.cs">
      <SubType>Form</SubType>
    </Compile>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net472'">
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Management.Automation">
      <HintPath>$(SystemRoot)\Microsoft.NET\assembly\GAC_MSIL\System.Management.Automation\v4.0_3.0.0.0__31bf3856ad364e35\System.Management.Automation.dll</HintPath>
      <Private>False</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net10.0-windows10.0.18362.0'">
    <PackageReference Include="System.Management.Automation" Version="7.6.0-preview.5" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Windows.Compatibility" Version="10.0.2" />
  </ItemGroup>
</Project>
